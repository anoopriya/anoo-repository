# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Swagger api json doc page
GET     /api-docs                               no.samordnaopptak.apidoc.controllers.ApiDocController.get

# Index page
GET     /service              controllers.Application.index

# Change log level
PUT     /service/logLevel/$level<(ALL|TRACE|DEBUG|INFO|WARN|ERROR|OFF)> controllers.Application.changeLogLevel(level: String)
# Change log level convenience method
GET     /service/logLevel/$level<(ALL|TRACE|DEBUG|INFO|WARN|ERROR|OFF)> controllers.Application.changeLogLevelGet(level: String)

# Admin
GET     /service/admin/ping                controllers.Admin.ping
GET     /service/admin/jvmstats            controllers.Admin.jvmstats
GET     /service/clear_toggles             controllers.Application.clearToggles(name: Option[String] ?= None)
GET     /service/toggles                   controllers.Application.toggles(name: Option[String] ?= None)
